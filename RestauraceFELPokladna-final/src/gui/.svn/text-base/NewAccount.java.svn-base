    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButton1ActionPerformed
        try {
            String[] tablenames = ServiceFacade.getInstance().getTableNames();
            this.SelectPanel.removeAll();
            this.SelectPanel.setLayout(this.grid);
            for (int a = 0; a < tablenames.length; a++) {
                JButton butt = new JButton();
                butt.setText(tablenames[a]);
                butt.addActionListener(new java.awt.event.ActionListener() {

                    public void actionPerformed(java.awt.event.ActionEvent evt) {
                        selectTable(evt);
                    }
                });
                this.SelectPanel.add(butt);
            }
            this.SelectPanel.setVisible(true);
            this.MenuPanel.setVisible(false);
            this.SelectPanel.validate();
            this.SelectPanel.repaint();
            this.repaint();
        } catch (FileNotFoundException ex) {
            Logger.getLogger(NewAccount.class.getName()).log(Level.SEVERE, null, ex);
        } catch (NotBoundException ex) {
            Logger.getLogger(NewAccount.class.getName()).log(Level.SEVERE, null, ex);
        } catch (RemoteException ex) {
            Logger.getLogger(NewAccount.class.getName()).log(Level.SEVERE, null, ex);
        }
    }//GEN-LAST:event_jButton1ActionPerformed

